{
    "manifest_version": 3,
    "name": "Webcam Capture Extension",
    "version": "1.0.0",
    "action": { 
        "default_popup": "index.html",
        "default_height": 10 
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "permissions": [
        "storage"
    ]
}